- @title = "Вход"
= form_tag sessions_path do
	%fieldset
		.clearfix
			%label Логин
			.input
				= text_field_tag :username, params[:username], { :class => :xlarge }
		.clearfix
			%label Пароль
			.input
				= password_field_tag :password, params[:password], { :class => :xlarge }
		.clearfix
			%label Запомнить
			.input
				= check_box_tag :remember_me, params[:remember_me]

		.actions
			= submit_tag "Войти", :class => "btn primary"

= form_tag password_resets_path, :method => :post do
	%fieldset
		%legend Забыли пароль?
		.clearfix
			%label Логин
			.input
				= text_field_tag :username
		.actions
			= submit_tag "Восстановить пароль", :class => "btn"